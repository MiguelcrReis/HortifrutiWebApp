@page
@model HortifrutiWebApp.Pages.Products.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4><b>Código: </b> @Model.Product.IdProduct.ToString("D6")</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Product.IdProduct" />
			<div class="form-group">
				<label asp-for="Product.Name" class="control-label"></label>
				<input asp-for="Product.Name" class="form-control" />
				<span asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Descrition" class="control-label"></label>
				<input asp-for="Product.Descrition" class="form-control" />
				<span asp-validation-for="Product.Descrition" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Price" class="control-label"></label>
				<input asp-for="Product.Price" class="form-control" />
				<span asp-validation-for="Product.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Stock" class="control-label"></label>
				<input asp-for="Product.Stock" class="form-control" />
				<span asp-validation-for="Product.Stock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
