@page
@model HortifrutiWebApp.Pages.RecoverPasswordModel
@{
	ViewData["Title"] = "Recuperação de senha";
}

<div class="row justify-content-center">
	<form class="form-signin align-self-center" method="post" asp-page="/RecoverPassword">
		<h1 class="mt-5 mb-3 font-weight-normal">Recuperação de Senha</h1>

		<style type="text/css">
			.val-summary ul {
				list-style-type: none;
				padding: 0;
				margin: 0;
			}
		</style>

		<div asp-validation-summary="ModelOnly" , class="val-summary text-danger mb-3"></div>

		<input asp-for="Data.Email" class="form-control" placeholder="Digite aqui o seu e-mail" required autofocus />
		<span asp-validation-for="Data.Email" class="text-danger"></span>
		<button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Recuperar</button>
	</form>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}