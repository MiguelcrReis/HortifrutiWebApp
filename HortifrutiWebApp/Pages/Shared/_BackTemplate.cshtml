<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" lang="pt-br" />
	<title>Hortifruti Reis :: Área Administrativa</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lumen.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">HortifrutiWebApp</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor01"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" asp-area="" asp-page="/Admin/Products/Index">Produtos</a>
						</li>
						<li class="nav-item active">
							<a class="nav-link" asp-area="" asp-page="/Admin/Clients/Index">Clientes</a>
						</li>
						<li class="nav-item active">
							<a class="nav-link" asp-area="" asp-page="/Admin/Admin">Administração</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<section class="container" style="padding-bottom:72px;">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</section>

	<footer class="footer bg-light text-center p-4 fixed-bottom">
		<div class="container">
			<span class="text-dark">Copyright &copy; 2022 - HortifrutiWebApp - Todos os direitos reservados - </span>
			<a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@RenderSection("Scripts", required: false)
	<script>
		$(function () {
			$('[data-toggle="tooltip"]').tooltip();
		})
	</script>
</body>
</html>
