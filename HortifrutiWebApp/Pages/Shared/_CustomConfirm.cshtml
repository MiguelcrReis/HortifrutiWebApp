<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

<script>
	function confirmCancellation(el) {
		$.confirm({
			title: 'Confirmação',
			content: 'Deseja realmente cancelar este pedido?',
			buttons: {
				cancel: {
					text: "Não",
					btnClass: "btn-primary",
					action: function () {
						$.alert('Cancelamento não realizado.');
					}
				},
				confirm: {
					text: "Sim",
					btnClass: "btn-danger",
					action: function () {
						el.form.submit();
					}
				}
			}
		});
	}

	function confirmDelete(el) {
		$.confirm({
			title: 'Confirmar!',
			content: 'Tem certeza que deseja deletar?',
			buttons: {
				confirm: {
					text: "Sim",
					btnClass: "btn-danger",
					action: function () {
						el.form.submit();
						$.alert('Confirmado!');
					}
				},
				cancel: {
					text: "Cancelar",
					btnClass: "btn-primary",
					action: function () {
						$.alert('Cancelado!');
					}
				}
			}
		});
	}

	function showAlert(message) {
		$.alert({
			title: 'Informação',
			content: message,
		});
	}
</script>