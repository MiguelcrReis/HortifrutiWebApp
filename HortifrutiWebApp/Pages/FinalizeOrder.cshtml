@page
@model HortifrutiWebApp.Pages.FinalizeOrderModel
@{
	ViewData["Title"] = "Pedido Realizado com Sucesso!";
}
<div class="card">
	<div class="card-header bg-danger text-light">
		<div class="row">
			<div class="col-8">
				<h4 class="m-0">
					@ViewData["Title"]
				</h4>
			</div>
			<div class="col-4 text-right">
				<a asp-page="/Index" class="btn btn-outline-light btn-sm pull-right">Continuar Comprando</a>
			</div>
		</div>
	</div>
	<hr />
	<div class="card-body text-center">
		<h4>Número do Pedido</h4>
		<h4><strong>@Model.Order.OrderId.ToString("D6")</strong></h4>
	</div>
	<hr />
	<div class="card-footer text-center">
		<h3>Obrigado e volte sempre!</h3>
	</div>
</div>
